.category-lists
  span.tags-punctuation
    font-size: 18px

  span.tagsPageCount
    margin-left: 4px

#page
  .category-lists
    padding: 1rem 0 1.5rem

    ul
      display: flex
      padding: 0
      flex-wrap: wrap
      flex-direction: row
      margin-top: .4rem
      padding: 0 0 0 1rem
      list-style: none
      counter-reset: li 0

      ul
        padding-left: .2rem

      li
        margin: 0 8px 8px 0
        position: relative
        margin: .3rem 0
        padding: .12em .4em .12em 1.4em

        &::before
          display: none
          position: absolute
          left: 0
          cursor: pointer
          transition: all .3s ease-out 0s
          top: .7em
          width: .43em
          height: .43em
          border: .215em solid #307af6
          border-radius: .43em
          background: 0 0
          content: ""

        &:hover::before
          border-color: #ff7242

        padding: 4px 16px
        width: 200px
        border-radius: 12px
        background: var(--sco-card-bg)
        border: var(--style-border-always)

    .category-title
      font-size: 2.57em

    .category-list
      a
        color: var(--sco-fontcolor)

        &:hover
          color: #307af6

      .category-list-count
        margin-left: .4rem
        color: #858585

        &::before
          content: "("

        &::after
          content: ")"

  .tag-cloud-list
    a
      display: flex
      width: fit-content
      color: var(--sco-fontcolor) !important
      font-size: 1.4em !important
      padding: .2em .5em
      background: var(--sco-card-bg)
      margin: .5em .5em
      border-radius: 12px
      -webkit-backface-visibility: hidden
      -webkit-transform-style: preserve-3d
      border: var(--style-border-always)
      box-shadow: var(--sco-shadow-border)
      align-items: center

      &:hover
        transform scale(1.1)
        background var(--sco-main) !important
        box-shadow var(--sco-shadow-blue)
        color var(--sco-white) !important
        border var(--style-border-hover)

      span.tagsPageCount
        color: var(--sco-lighttext)

      +maxWidth768()
        zoom .85

.tags-name
  margin-left: 2px

@media screen and (max-width: 768px)
  #page
    .category-lists
      padding: 0

      .category-title
        font-size: 2em

span.tagsPageCount
  background: var(--sco-secondbg)
  padding: 4px 4px
  border-radius: 4px
  color: var(--sco-secondtext)
  line-height: 1
  text-align: center
  min-width: 22.5px
  display: inline-block
  font-size: .6rem
  margin-left: 4px

#category #category-bar
  padding 0
  border none
  box-shadow none

  +maxWidth768()
    border-radius: 0;
    background: var(--sco-background);
    margin-bottom: 0;
    position: -webkit-sticky;
    position: sticky;
    z-index: 1;
    padding: 0;
    height: 50px;
    margin-top: 0;
    align-items: center;