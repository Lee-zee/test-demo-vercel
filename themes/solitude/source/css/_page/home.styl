// 即刻、categoriesBar 样式
#bbTimeList,
#category-bar
  padding 0.4rem 1rem 0.4rem 1rem
  background var(--sco-card-bg)
  border-radius 12px
  display flex
  white-space nowrap
  overflow hidden
  margin-bottom 1rem
  border var(--style-border)
  transition .3s
  width 100%
  justify-content space-between
  -webkit-user-select none
  align-items center

  +maxWidth1300()
    margin-bottom 1rem
    animation slide-in .6s 0s backwards

  +minWidth1300()
    &:hover
      border var(--style-border-hover)
      box-shadow var(--sco-shadow-main)

  +maxWidth768()
    margin-bottom 0
    margin-top 0
    border-radius 0
    background var(--sco-background)
    padding 0.5rem 20px
    border none

#category-bar
  white-space nowrap
  overflow hidden
  justify-content space-between

  +minWidth1300()
    margin-bottom 0.75rem
    animation slide-in .6s .3s backwards

    .category-in-bar-tips
      margin-bottom .25rem

.page-title
  display none

#page h1.page-title
  margin .4rem 0 1rem

#page
  background 0 0
  border none
  padding 0
  box-shadow none
  min-height calc(100vh - 464px)