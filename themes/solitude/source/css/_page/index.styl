@import "equipment.styl"

@import "error.styl"

@import "home.styl"
@import "homeTop.styl"

@import "link.styl"

@import "rss.styl"

@import "moment.styl"

if hexo-config('says.enable')
  @import "says.styl"

@import "tag.styl"

if hexo-config('about.enable')
  @import "about.styl"

.author-content.author-content-item.sharePage
  height 19rem
  background-size cover
  color var(--sco-white)
  overflow hidden
  margin-top 0

.author-content-item
  width 49%
  border-radius 12px
  background var(--sco-card-bg)
  border var(--style-border-always)
  box-shadow var(--sco-shadow-border)
  position relative
  padding 1rem 2rem
  overflow hidden

  &.single
    width 100%

  .author-content-item-title
    font-size 36px
    font-weight 700
    line-height 1

  .author-content-item-tips
    opacity .8
    font-size .6rem
    margin-bottom .5rem

  .content-bottom
    margin-top auto
    display flex
    align-items center
    justify-content space-between

    .icon-group
      display flex

      i
        display inline-block
        width 22px
        height 18px
        margin-right .5rem

  .card-content
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    z-index 2
    display flex
    flex-direction column
    padding 1rem 2rem

    .author-content-item-title
      margin-bottom .5rem

    .banner-button-group
      position absolute
      bottom 1.5rem
      right 2rem

      .banner-button
        height 40px
        width 118px
        border-radius 20px
        justify-content center
        background var(--sco-black-op)
        color var(--sco-white)
        display flex
        align-items center
        z-index 1
        transition .3s
        cursor pointer
        backdrop-filter saturate(180%) blur(20px)
        -webkit-backdrop-filter blur(20px)
        transform translateZ(0)

        &:hover
          background var(--sco-main)
          color var(--sco-white)

        i
          margin-right 8px
          font-size 22px

@media screen and (max-width: 768px)
  .author-content-item
    .card-content
      .banner-button-group
        right 1rem
        bottom 1rem

      .banner-button-group
        .banner-button
          background 0 0 !important
          color var(--sco-white)
          padding 0
          width fit-content

          i
            margin-right 0
            font-size 1.5rem

      .banner-button-text
        display none